# History control
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"

# Autocompletion
source /usr/share/bash-completion/bash_completion

# Set complete path
#
# On WSL we need to add the $PATH in order to be able to access Windows programs like win32yank.exe
export PATH="$PATH:./bin:$HOME/.local/bin:$HOME/.local/share/omakub/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"
set +h

export OMAKUB_PATH="/home/$USER/.local/share/omakub-on-wsl"
